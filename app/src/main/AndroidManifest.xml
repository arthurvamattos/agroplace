<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.edu.ifro.agroplace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PerfilActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.FormularioUsuarioActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.ProdutoActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.FormularioVendaActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ConversaActivity"
            android:parentActivityName=".activity.ConversasActivity" />
        <activity
            android:name=".activity.ConversasActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.Conversas" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize|adjustPan"
            android:name=".activity.CadastroUsuarioActivity"
            android:theme="@style/AppTheme.Auth"/>
        <activity
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize|adjustPan"
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.Auth">
        </activity>
    </application>

</manifest>