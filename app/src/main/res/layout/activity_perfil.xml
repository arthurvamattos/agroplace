<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/perfil_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="275dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/colorPrimary">
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/perfil_foto"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/photo_round"
                android:src="@drawable/ic_person" />
        </RelativeLayout>

    //Nome
    <TextView
        android:id="@+id/perfil_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo"
        android:layout_margin="16dp"
        android:textFontWeight="600dp"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>

    //Produtos
    <TextView
        android:id="@+id/perfil_produtos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos deste vendedor"
        android:layout_margin="20dp"
        android:textFontWeight="600dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/perfil_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    </LinearLayout>

</ScrollView>