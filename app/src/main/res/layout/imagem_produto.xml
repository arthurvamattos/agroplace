<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagem_produto_vendedor_foto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/photo_round" />

            <TextView
                android:id="@+id/imagem_produto_vendedor_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="18dp"
                android:textColor="#202020"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imagem_produto_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/form_background"/>

        <TextView
            android:id="@+id/imagem_produto_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>


</android.support.v7.widget.CardView>