<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lista_conversa_personalizada_foto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/photo_round"
        android:src="@drawable/ic_person"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/lista_conversa_personalizada_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#202020"/>

            <TextView
                android:id="@+id/lista_conversa_personalizada_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensagem"
                android:textSize="14dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/btn_circle"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/lista_contato_personalizado_vizualizacao"/>
    </RelativeLayout>

</LinearLayout>